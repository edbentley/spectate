{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "allowJs": false,
    "skipLibCheck": false,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": ["./src"]
}
